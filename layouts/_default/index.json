{{- $.Scratch.Add "index" slice -}}
{{- range $index, $page := where site.RegularPages "Type" "posts" -}}
  {{- $.Scratch.Add "index" (dict "title" .Title "url" .Permalink "excerpt" (.Summary | plainify | truncate 150) "tags" .Params.tags "date" (.Date.Format "2006-01-02")) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}